{
  "compilerOptions": {
    /* Podstawowa konfiguracja */
    "target": "es2016",
    "module": "commonjs",                  
    "moduleResolution": "node",
    
    /* Kluczowe ustawienia naprawiające Twój błąd */
    "esModuleInterop": true,               // Pozwala na "import express from 'express'"
    "verbatimModuleSyntax": false,         // Wyłączamy restrykcyjne sprawdzanie składni importów
    
    /* Reszta */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}